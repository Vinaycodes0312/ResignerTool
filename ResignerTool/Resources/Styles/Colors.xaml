<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Colors -->
    <Color x:Key="Primary">#2196F3</Color>
    <Color x:Key="PrimaryDark">#1976D2</Color>
    <Color x:Key="PrimaryLight">#BBDEFB</Color>
    <Color x:Key="PrimaryAccent">#448AFF</Color>

    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#607D8B</Color>
    <Color x:Key="SecondaryDark">#455A64</Color>
    <Color x:Key="SecondaryLight">#CFD8DC</Color>

    <!-- Status Colors -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Info">#03A9F4</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextSecondary">#757575</Color>
    <Color x:Key="TextDisabled">#9E9E9E</Color>
    <Color x:Key="TextOnPrimary">White</Color>
    <Color x:Key="TextOnSecondary">White</Color>

    <!-- Background Colors -->
    <Color x:Key="Background">White</Color>
    <Color x:Key="BackgroundDark">#F5F5F5</Color>
    <Color x:Key="Surface">White</Color>
    <Color x:Key="SurfaceVariant">#FAFAFA</Color>

    <!-- Border Colors -->
    <Color x:Key="Border">#E0E0E0</Color>
    <Color x:Key="BorderDark">#BDBDBD</Color>

    <!-- System Colors -->
    <Color x:Key="SystemGray">#757575</Color>
    <Color x:Key="SystemGrayLight">#BDBDBD</Color>
    <Color x:Key="SystemGrayDark">#424242</Color>

    <!-- Legacy System Colors (for compatibility) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource PrimaryAccent}"/>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
</ResourceDictionary>
